{% extends "@User/Page_admin.html.twig" %}
{% block body %}
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
    <script>
        $(document).ready(function(){
            $("#myInput").on("keyup", function() {
                var value = $(this).val().toLowerCase();
                $("#Wafa tr").filter(function() {
                    $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
                });
            });
        });
    </script>
    <style>
        a.btn {
            -webkit-transform: scale(0.8);
            -moz-transform: scale(0.8);
            -o-transform: scale(0.8);
            -webkit-transition-duration: 0.5s;
            -moz-transition-duration: 0.5s;
            -o-transition-duration: 0.5s;
        }
        .test{
            padding-left: 3rem;
            padding-right: 3rem;
        }
    </style>
    <div class="test">
        <div class="col-lg-20 grid-margin stretch-card" xmlns="http://www.w3.org/1999/html">
            <div class="card">
                <div class="card-body">
                    <h1 class="card-title">Liste des produits</h1>

                    <div class="table-responsive pt-3">



                        <table class="table table-bordered">
                            <thead>
                            <tr>
                                <th>
                                    Nom
                                </th>
                                <th>
                                    Prix
                                </th>
                                <th>
                                    Qunatite
                                </th>
                                <th>
                                    Cat√©gorie
                                </th>
                                <th>
                                    Image
                                </th>
                                <th>
                                    Action
                                </th>
                            </tr>
                            </thead>
                            <tbody id="Wafa">
                            {% for p in prod %}

                                <tr>
                                    <td>
                                        {{ p.nomproduit }}
                                    </td>
                                    <td>
                                        {{ p.prixprod }}

                                    </td>
                                    <td>
                                        {{ p.qte }}
                                    </td>
                                    <td>
                                        {{ p.getIdCategorie.getnom}}
                                    </td>

                                    <td>

                                        <img src="{{ asset('Upload/')}}{{ p.imgprod }}" width="100" class="img-circle" />

                                    </td>


                                    <td>
                                        <a class="btn btn-warning a-btn-slide-text" href="{{ path('produit_modifier',{'id':p.id}) }}">
                                            <span class="fas fa-edit" aria-hidden="true"></span>
                                            <span><strong>Modifier</strong></span></a>
                                        <a class="btn btn-danger a-btn-slide-text" href="{{ path('produit_delete',{'id':p.id}) }}">
                                            <span class="fas fa-minus-circle" aria-hidden="true"></span>
                                            <span><strong>Supprimer</strong></span></a>
                                    </td>
                                    <div class="navigation text-center" >
                                        {{ knp_pagination_render(prod) }}
                                    </div>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>


                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}