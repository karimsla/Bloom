

{% extends "@User/Page_admin.html.twig" %}

{% block body %}








    <main>
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-lg-7">
                    <div class="card shadow-lg border-0 rounded-lg mt-5">
                        <div class="card-header"><h3 class="text-center font-weight-light my-4">Ajout d'un equipement</h3></div>
                        <div class="card-body">
                            {{ form_start(form) }}
                            <div class="form-group"><label class="small mb-1" for="inputEmailAddress">Nom</label>


                                {{ form_widget(form.nom,{ 'attr': {'placeholder': 'Entrer nom','class': 'form-control py-4'} })}}
                            </div>

                            <div class="form-row">
                                <div class="col-md-6">
                                    <div class="form-group"><label class="small mb-1" for="inputFirstName">Prix</label>
                                        {{ form_widget(form.prix,{ 'attr': {'placeholder': 'Entrer le prix','class': 'form-control py-4'} })}}
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group"><label class="small mb-1" for="inputLastName">Quantité</label>
                                        {{ form_widget(form.quantite,{ 'attr': {'placeholder': 'Entrer la quantité','class': 'form-control py-4'} })}}
                                    </div>
                                </div>
                            </div>

                            <div class="form-group mt-4 mb-0">
                                <button class="btn btn-primary btn-block" type="submit" name="submit-form">Ajouter</button>
                            </div>  <div class="alert-msg text-danger" style="text-align: left;">
                                {% if error is defined %}{{ error }}{% endif %}</div>
                            {{ form_end(form) }}
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </main>

    </div></div></div></div></div>
    <br><br>


{% endblock %}
