{% extends 'base.html.twig' %}

{% block body %}
    <h1>Rating</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ rating.id }}</td>
            </tr>
            <tr>
                <th>Comment</th>
                <td>{{ rating.comment }}</td>
            </tr>
            <tr>
                <th>Rate</th>
                <td>{{ rating.rate }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{% if rating.date %}{{ rating.date|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Client</th>
                <td>{{ rating.client }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('rating_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('rating_edit', { 'id': rating.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
